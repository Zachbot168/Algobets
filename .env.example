# Database Configuration
DATABASE_URL=sqlite:///./valorant_betting.db
DUCKDB_PATH=./data/bronze.db

# External API Keys
RIOT_API_KEY=your_riot_api_key_here
THEODS_API_KEY=your_theoddsapi_key_here
PINNACLE_API_KEY=your_pinnacle_api_key_here
PANDASCORE_API_KEY=your_pandascore_api_key_here
ABIOS_API_KEY=your_abios_api_key_here

# LLM Configuration  
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=valorant-betting-data

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=valorant_betting

# WandB Configuration (optional)
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=valorant-betting

# Twitter API (for roster change detection)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Application Settings
APP_NAME=VALORANT Betting Platform
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# Betting Configuration
MAX_STAKE_PERCENT=0.05  # Max 5% of bankroll per bet
KELLY_FRACTION=0.25     # Fractional Kelly criterion
MIN_EDGE_THRESHOLD=0.02 # Minimum 2% edge to place bet

# API Service Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# Airflow Configuration
AIRFLOW_HOME=./orchestration
AIRFLOW_DAGS_FOLDER=./orchestration/dags
AIRFLOW_WEBSERVER_PORT=8080

# Security
SECRET_KEY=your_secret_key_here_minimum_32_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RIOT_API_RATE_LIMIT=100  # requests per 2 minutes
ODDS_API_RATE_LIMIT=500  # requests per month